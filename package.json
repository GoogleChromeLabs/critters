		"dom-serializer": "2.0.0",
		"domhandler": "5.0.2",
		"htmlparser2": "8.0.2",
		"postcss": "8.4.23",
		"pretty-bytes": "5.3.0"
	},
	"devDependencies": {
		"@babel/preset-env": "7.11.0",
		"babel-core": "6.26.0",
		"jsdom": "16.6.0",
		"microbundle": "0.12.3",
		"typescript-esbuild": "workspace:0.2.25"
